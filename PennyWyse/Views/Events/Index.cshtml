@model IEnumerable<PennyWyse.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Upcoming Events</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InfoURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatorId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <!-- Page Content -->
            <div class="container">

                <!-- Page Heading -->
                <h1 class="my-4">
                   Local Events 
                    <small>Here are the events that are upcoming based on your cash.</small>
                </h1>

                <!-- Project One -->
                <div class="row">
                    <div class="col-md-7">
                        <a href=" @Html.DisplayNameFor(modelItem => item.InfoURL)">
                            <img class="img-fluid rounded mb-3 mb-md-0" src= @Html.DisplayNameFor(modelItem => item.ImageURL) alt="">
                        </a>
                    </div>
                    <div class="col-md-5">
                        <h3> @Html.DisplayNameFor(modelItem => item.Name)</h3>
                        <p> @Html.DisplayNameFor(modelItem => item.Description)</p>
                        <a class="btn btn-primary" href=@Html.DisplayNameFor(modelItem => item.InfoURL)>View Event</a>
                    </div>
                </div>
                <!-- /.row -->

                <hr>


            </div>
            <!-- /.container -->

        </tr>

                <!-- Pagination -->
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
}
    </tbody>
</table>
