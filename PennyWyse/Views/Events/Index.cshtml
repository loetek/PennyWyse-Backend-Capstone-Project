@model IEnumerable<PennyWyse.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Upcoming Events</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InfoURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatorId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <div class="card" style="width: 40rem;">

            <img class="card-img-top" src=@Html.DisplayFor(modelItem => item.ImageURL) alt="Card image cap"> 

            <div class="card-body">

                <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Name) ></h5>
                <h4 class="card-text"> $ @Html.DisplayFor(modelItem => item.Price) </h4>
                <h3 class="card">@Html.DisplayFor(modelItem => item.StartDate) </h3>

                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>

                <a href=@Html.DisplayFor(modelItem => item.InfoURL) class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
      
    </tr>
}
    </tbody>
</table>
