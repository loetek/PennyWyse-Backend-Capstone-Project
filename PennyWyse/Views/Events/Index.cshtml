@model IEnumerable<PennyWyse.Models.Event>

@{
    ViewData["Title"] = "Index";
    string searchId = Context.Request.Query["searchId"].ToString();
}

<table class="table">
  
    <!-- Page Heading -->
    <h1 class="my-4">
        <small>Here are some upcoming events for $ @searchId !</small>
    </h1>
    <tbody>
    @if (searchId == "")
    {

        searchId = "0";

                    @foreach (var item in Model)
                     {
             <tr>
       
                 <div class="container">
                     <div class="row">
                         <div class="col-md-7">
                             <a href=" @Html.DisplayFor(modelItem => item.InfoURL)">
                                 <img class="img-fluid rounded mb-3 mb-md-0" src=@Html.DisplayFor(modelItem => item.ImageURL) alt="">
                             </a>
                         </div>
                         <div class="col-md-5">
                             <h3> @Html.DisplayFor(modelItem => item.Name)</h3>
                             <h4> $ @Html.DisplayFor(modelItem => item.Price)</h4>
                             <p> @Html.DisplayFor(modelItem => item.Description)</p>


                             @*This will check to make sure that the event is not already in the User's list of events---> JD*@

                             @*@if (@item.EventId)
                             {*@

                                 <form asp-action="Create" asp-route-searchId="@searchId" asp-controller="UserEvents">
                                     <input type="hidden" value="@item.EventId" name="EventId" />
                                     <div class="form-group">
                                         <input type="submit" value="Add Event" class="btn btn-primary" asp-action="Create" asp-route-searchId="@searchId" asp-controller="UserEvents" />

                                     </div>
                                 </form>
                             @*}*@

                                 <a class="btn btn-primary" href=@Html.DisplayFor(modelItem => item.InfoURL)>View Website</a>
                             </div>
                     </div>
                 <hr />
                 </div>

             </tr>
                     }
    }
    else
    {
        @foreach (var item in Model)
         {
             <tr>
                 <!-- Page Content -->
                 <div class="container">

                     <!-- Project One -->
                     <div class="row">
                         <div class="col-md-7">
                             <a href=" @Html.DisplayFor(modelItem => item.InfoURL)">
                                 <img class="img-fluid rounded mb-3 mb-md-0" src=@Html.DisplayFor(modelItem => item.ImageURL) alt="">
                             </a>
                         </div>
                         <div class="col-md-5">
                             <h3> @Html.DisplayFor(modelItem => item.Name)</h3>
                             <h4> $ @Html.DisplayFor(modelItem => item.Price)</h4>
                             <p> @Html.DisplayFor(modelItem => item.Description)</p>

                             <form asp-action="Create" asp-route-searchId="@searchId" asp-controller="UserEvents">
                                 <input type="hidden" value="@item.EventId" name="EventId"/>
                                 <div class="form-group">
                                     <input type="submit" value="Add Event" class="btn btn-primary" asp-action="Create" asp-route-searchId="@searchId" asp-controller="UserEvents"/>

                                     <a class="btn btn-primary" href=@Html.DisplayFor(modelItem => item.InfoURL)>View Website</a>
                                 </div>
                             </form>
                         </div>
                     </div>
                 </div>

             </tr>
         }
    }
    
    

    </tbody>
    

